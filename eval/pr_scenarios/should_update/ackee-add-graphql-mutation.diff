@@ -0,0 +1,35 @@
+const domains = require('../../database/domains')
+
+/**
+ * Archive a domain without deleting its data.
+ * Archived domains are hidden from the dashboard but retain all records.
+ * @param {Object} _
+ * @param {Object} input - The mutation input.
+ * @param {String} input.id - Domain ID to archive.
+ * @returns {Object} Payload with success status.
+ */
+module.exports = async (_, { id }) => {
+  const domain = await domains.get(id)
+
+  if (!domain) {
+    throw new Error('Domain not found')
+  }
+
+  await domains.update(id, { archived: true })
+
+  return {
+    success: true,
+    payload: await domains.get(id)
+  }
+}
