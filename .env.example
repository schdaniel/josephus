# Environment
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=DEBUG

# API
API_HOST=0.0.0.0
API_PORT=8000
API_KEY=  # Required in production. Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"

# Database (PostgreSQL with pgvector)
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/josephus

# Redis (for Celery job queue and caching)
REDIS_URL=redis://localhost:6379/0

# GitHub App
# Create at: https://github.com/settings/apps
GITHUB_APP_ID=
GITHUB_APP_PRIVATE_KEY=  # Base64 encoded or path to .pem file
GITHUB_WEBHOOK_SECRET=   # Random string for webhook signature verification

# LLM Providers
LLM_PROVIDER=claude  # claude, openai, or ollama

# Anthropic (Claude)
ANTHROPIC_API_KEY=

# OpenAI (optional)
OPENAI_API_KEY=
OPENAI_BASE_URL=  # Optional: for Azure OpenAI or proxies

# Feature Flags
ENABLE_SECRET_SCANNING=true
MAX_REPO_SIZE_MB=100
MAX_CONTEXT_TOKENS=100000

# Logfire (observability)
LOGFIRE_TOKEN=
